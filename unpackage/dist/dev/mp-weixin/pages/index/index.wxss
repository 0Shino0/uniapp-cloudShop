.indexContainer .header {
  display: flex;
  padding: 10rpx 0;
}
.indexContainer .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 20rpx;
}
.indexContainer .search {
  position: relative;
  width: 420rpx;
  height: 60rpx;
  background: #eee;
}
.indexContainer .search .iconfont {
  position: absolute;
  font-size: 30rpx;
  top: 15rpx;
  left: 10rpx;
}
.indexContainer .search input {
  width: 370rpx;
  margin-left: 50rpx;
  height: 60rpx;
}
.indexContainer .search input .placeholder {
  font-size: 26rpx;
}
.indexContainer button {
  width: 144rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0 4rpx;
  margin: 0 10rpx;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
}
.indexContainer .navScroll .active {
  border-bottom: 1rpx solid #bb2c08;
}

